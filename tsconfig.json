{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "Node",
        "declaration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "lib": ["ESNext"],
        "paths": {
            /*Path alias*/ "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
